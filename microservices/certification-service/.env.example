# Certification Service Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/gacp_certification

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3001

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Certificate Generation
CERTIFICATE_TEMPLATE_PATH=./templates
CERTIFICATE_OUTPUT_PATH=./generated-certificates

# QR Code Configuration
QR_CODE_BASE_URL=https://gacp.go.th/verify

# External Services
PAYMENT_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_URL=http://localhost:3008