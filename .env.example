# Environment Variables for GACP Certification System
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_PASSWORD=secure_mongo_password_2024

# Redis Configuration  
REDIS_PASSWORD=secure_redis_password_2024

# GACP Certification System Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Application secrets
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB (Primary database for application data)
MONGODB_URI=mongodb://localhost:27017/gacp_certification
MONGODB_OPTIONS=retryWrites=true&w=majority

# PostgreSQL (Optional - for legacy data and reporting)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=gacp_licenses
PG_USER=postgres
PG_PASSWORD=password
PG_SSL=false

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
UPLOAD_PATH=./uploads
CERTIFICATE_PATH=./certificates
TEMPLATE_PATH=./templates
MAX_FILE_SIZE=10485760

# Digital signature keys
PUBLIC_KEY_PATH=./keys/public.pem
PRIVATE_KEY_PATH=./keys/private.pem

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email templates
EMAIL_FROM=noreply@gacp.doa.go.th
EMAIL_FROM_NAME=ระบบรับรอง GACP

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
SMS_PROVIDER=thaireseller
SMS_API_URL=https://thaireseller.com/api/v1/sms
SMS_API_KEY=your_sms_api_key
SMS_SENDER=GACP

# =============================================================================
# LINE NOTIFICATION CONFIGURATION
# =============================================================================
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_BOT_API_URL=https://api.line.me/v2/bot

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
PAYMENT_PROVIDER=kasikornbank
PAYMENT_API_URL=https://rt05.kasikornbank.com/pgpayment/service
PAYMENT_MERCHANT_ID=your_merchant_id
PAYMENT_SECRET_KEY=your_payment_secret_key
PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://gacp.doa.go.th

# Security headers
CONTENT_SECURITY_POLICY_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/gacp-system.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30

# External logging
LOG_ELASTICSEARCH_URL=
LOG_ELASTICSEARCH_INDEX=gacp-logs

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# External monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9091
GRAFANA_URL=

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Push notifications
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
SKIP_EMAIL_VERIFICATION=false
ALLOW_SELF_SIGNED_CERTIFICATES=false

# Test database (for running tests)
TEST_MONGODB_URI=mongodb://localhost:27017/gacp_certification_test
TEST_PG_DATABASE=gacp_licenses_test

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment

# SSL/TLS
# SSL_ENABLED=true
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem

# Load balancing
# CLUSTER_MODE=true
