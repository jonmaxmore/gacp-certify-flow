# Environment Variables for GACP Certification System
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_PASSWORD=secure_mongo_password_2024

# Redis Configuration  
REDIS_PASSWORD=secure_redis_password_2024

# JWT Configuration
JWT_SECRET=super-secure-jwt-secret-key-for-gacp-system-2024

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

REDIS_HOST=localhost# Example:

REDIS_PORT=6379# VITE_SUPABASE_URL=https://your-project-id.supabase.co

REDIS_PASSWORD=your_redis_password_here# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Configuration
JWT_PUBLIC_KEY=./keys/public.key
JWT_PRIVATE_KEY=./keys/private.key
JWT_ISSUER=gacp.dtam.go.th
JWT_AUDIENCE=gacp-api
JWT_EXPIRATION=1800

# API Gateway Configuration
KONG_ADMIN_API_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
CORS_WHITELIST=https://gacp.dtam.go.th,https://api.gacp.dtam.go.th,http://localhost:3000

# External Services
OMISE_SECRET_KEY=your_omise_secret_key
OMISE_PUBLIC_KEY=your_omise_public_key
ELASTICSEARCH_URL=http://localhost:9200

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@dtam.go.th
SMTP_PASSWORD=your_email_password

# File Storage
STORAGE_BUCKET=gacp-documents
STORAGE_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000